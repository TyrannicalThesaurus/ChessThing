class Rook extends ChessPiece 
{
    public Rook(int lx, int ly, String n, int p)
    {
        super(lx, ly, n, p);
    }
    
    public void moveRook(int x, int y)
    {
        if(getLocationy() > 0 && getLocationy() < 7 && getLocationx() > 0 && getLocationx() < 7)
        {
            shift(x, y);
        }
    }   
}
